<!DOCTYPE html>
<html lang="es">

<head>
    <%- include(`./partials/head`) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
            integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link rel="stylesheet" href="./template1.css">
</head>

<script>
    const deleteProductById = async (id) => {
        const response = await fetch(`/api/productos/${id}`, {
            headers: {
                'Content-Type': 'application/json'
            },
            method: 'DELETE',
        })
            .then(_ => {
                window.location.href = "http://localhost:8080/api/productos";
            });
    }
</script>

<body>
    <header>
        <%- include('./partials/headerLog', {current: `formProductos`}) %>
    </header>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-12">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h2 class="fw-bold mb-2 text-uppercase">¡Tunas disponibles!</h2>
                            <% if (allProducts.length <=0) { %>
                                <p>No tenemos tunas disponibles! :(</p>
                                <% } else { %>
                                    <table class="table table-dark">
                                        <thead>
                                            <tr>
                                                <th scope="col">Código</th>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Descripcion</th>
                                                <th scope="col">Precio</th>
                                                <th scope="col">Stock</th>
                                                <th scope="col">Imagen</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% allProducts.forEach(product=>{ %>
                                                <tr>
                                                    <!--
                                                    <td scope="row">
                                                        <%= product.id %>
                                                    </td>
                                                        
                                                    -->
                                                    <td>
                                                        <%= product.codigo %>
                                                    </td>
                                                    <td>
                                                        <%= product.nombre %>
                                                    </td>
                                                    <td>
                                                        <%= product.descripcion %>
                                                    </td>
                                                    <td>
                                                        $<%= product.precio %>
                                                    </td>
                                                    <td>
                                                        <%= product.stock %>
                                                    </td>
                                                    <td>
                                                        <img src="<%= product.thumbnail %>" width="60" height="60">
                                                    </td>
                                                    <td>
                                                        <form action="/api/carrito/addProduct" method="POST">
                                                            <input type="hidden" name="idUser" value=<%=userLog._id %>
                                                            />
                                                            <input type="hidden" name="idProduct" value=<%=product.id %>
                                                            />
                                                            <button class="btn btn-primary" type="submit">¡Agregar al
                                                                carrito!</button>
                                                        </form>
                                                    </td>


                                                    <% if(userLog.admin) { %>
                                                        

                                                    <td>
                                                        <form action="/api/productos/modificar" method="POST">
                                                            <input type="hidden" name="codigoProducto" value=<%= product.codigo %>
                                                            />
                                                            <input type="hidden" name="idProduct" value=<%= product.id %>
                                                            />
                                                            <input type="hidden" name="nameProduct" value=<%= product.nombre  %>
                                                            />
                                                            <input type="hidden" name="descripcionProduct" value=<%= product.descripcion %>
                                                            />
                                                            <input type="hidden" name="precioProducto" value=<%= product.precio %>
                                                            />
                                                            <input type="hidden" name="stockProduct" value=<%= product.stock %>
                                                            />
                                                            <input type="hidden" name="urlProdcut" value=<%= product.thumbnail %>
                                                            />
                                                            <button class="btn btn-success"
                                                                type="submit">Modificar tuna</button>
                                                        </form>
                                                    </td>
                                                        <td>
                                                            <button class="btn btn-danger"
                                                                onclick="deleteProductById(`<%= product.id %>`)">Eliminar Tuna</button>
                                                        </td>

                                                        <% } %>

                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>

</html>